<!DOCTYPE html>
<html>
  <head>
    <title>Stalker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body id="stalker">
    <div id="container">

      <div id="header">
        <h1>Stalker</h1>
        <h3>Sistema de Rastreamento Realtime</h3>
      </div>
      <div id="content">
      <% flash.each do |key, value| %>
        <%= content_tag :div, value, class: "flash #{key}" %>
      <% end %>

        <%= yield %>

      </div>
      <div id="sidebar"></div>
    </div>
  </body>
</html>
